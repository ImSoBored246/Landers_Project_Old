<Window x:Class="CollisionTesting.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CollisionTesting"
        mc:Ignorable="d"
        Title="Main Menu" Height="450" Width="800" Closing="Window_Closing" Background="Black" Foreground="White">
    <Grid>
        <Button x:Name="button_ExitGame" Content="Exit Game" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="220" Height="50" FontSize="18" Click="ExitGame" Background="#FF1F1F1F" Foreground="White"/>
        <Button x:Name="button_PlayGame" Content="Play Game" HorizontalAlignment="Right" Margin="0,0,10,120" VerticalAlignment="Bottom" Width="220" Height="50" FontSize="18" Click="PlayGame" Background="#FF1F1F1F" Foreground="White"/>
        <Button x:Name="button_HelpMenu" Content="Help Menu" HorizontalAlignment="Right" Margin="0,0,10,65" VerticalAlignment="Bottom" Width="220" Height="50" FontSize="18" Click="Button_HelpMenu_Click" Background="#FF1F1F1F" Foreground="White"/>

    </Grid>
</Window>
